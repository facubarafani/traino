<div class="row">
  <form action="/user/login" method="post">
    <div class="col s3"></div>
    <div class="input-field col s6">
      <div class="row">
        <div class="col s12">
          <div class="card">
            <div class="card-content">
              <span class="card-title">Iniciar Sesión - Usuario</span>
              <input placeholder="E-mail" name="email" type="text" class="validate">
              <input placeholder="Contraseña" name="password" type="password" class="validate">
            </div>
            <div class="card-action">
              <div class="row">
                <button class="btn waves-effect waves-light" type="submit">
                  Iniciar Sesión
                  <i class="material-icons right">send</i>
                </button>
              </div>
              <div class="row">
                Sos personal trainer? <a href="/personaltrainer/login">Inicia sesión acá</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col s3"></div>
  </form>
</div>
