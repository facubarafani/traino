<div class="row">
  <form action="/membership/create" method="post">
      <div class="col s3"></div>
      <div class="input-field col s6">
          <div class="row">
              <div class="col s12">
                  <div class="card">
                      <div class="card-content">
                          <span class="card-title">Nueva membresia</span>
                          <div class="row">
                            <div class="col s6">
                            <input placeholder="Fecha inicio" type="text" name="birth_date" class="datepicker">
                          </div>
                          <div class="col s6">
                            <input placeholder="Precio" name="price" type="number" class="validate">
                            </div>
                          </div>
                          <div class="row">
                            <div class="col s6">
                              <input placeholder="DuraciÃ³n (meses)" name="duration" type="number" class="validate">
                          </div>
                          <div class="col s6">
                            <a class="waves-effect waves-light btn-large btn modal-trigger" href="#modal1"><i class="material-icons left">search</i>asignar usuario</a>
                            </div>
                          </div>
                      </div>
                      <div class="card-action">
                          <button class="btn waves-effect waves-light" type="submit">
                              crear
                              <i class="material-icons right">send</i>
                          </button>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col s3"></div>
      </div>
  </form>
</div>

  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Asignar usuario</h4>
      <div class="row">
        <div class="col s2"></div>
        <div class="col s7">
          <input placeholder="Ingrese el nombre del usuario" id="search" type="text" class="validate">
        </div>
        <div class="col s1">
          <a class="btn-floating"><i class="material-icons">search</i></a>
        </div>
        <div class="col s2"></div>
      </div>
      <ul class="collection">
      <% for(let i of allUsers){ %>
          <li id="user_<%= i.id %>" class="collection-item"><%= i.fullName %>
          <a onclick = "selectUser(<%= i.id %>)" class="secondary-content" >Seleccionar</a>
        </li>
    <% } %>
      </ul>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Confirmar</a>
    </div>
  </div>

<script>
  var selectedUserId = null

  $(document).ready(function(){
    $('.datepicker').datepicker();
  });

  $(document).ready(function(){
    $('.modal').modal();
  });

  function selectUser(id) {
    var allElements = document.getElementsByClassName("collection-item")
    // var currentElement = document.getElementById("user_"+id)
    selectedUserId = id
    for (i in allElements) {
      let actualElement = allElements.item(i)
      let selectButton = actualElement.firstElementChild
      if (i == selectedUserId-1) {
        selectButton.textContent = "Deseleccionar"
      } else if (i<=i--){
        selectButton.textContent = "Seleccionar"
      }
    }
    
  };
</script>
